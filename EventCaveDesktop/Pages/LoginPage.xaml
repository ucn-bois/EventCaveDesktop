<Page x:Class="EventCaveDesktop.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventCaveDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">
    <Grid>
        <Label Content="Admin console log in" HorizontalAlignment="Center" Margin="0,0,0,250" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <Label Content="Username" HorizontalAlignment="Center" Margin="0,0,0,125" VerticalAlignment="Center" Width="160"/>
        <TextBox Name="userNameBox" HorizontalAlignment="Center" Height="25" Margin="0,0,0,75" TextWrapping="Wrap" VerticalAlignment="Center" Width="150"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Center" Width="160"/>
        <PasswordBox Name="passwordBox" HorizontalAlignment="Center" Height="25" Margin="0,75,0,0" VerticalAlignment="Center" Width="150"/>
        <Button Name="loginBtn" Content="Log In" Height="35" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Center" Width="200" Click="Log_In_Btn_Click" FontSize="16" FontWeight="Bold"/>
    </Grid>


</Page>
