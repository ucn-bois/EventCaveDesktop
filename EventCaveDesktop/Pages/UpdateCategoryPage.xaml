<Page x:Class="EventCaveDesktop.Pages.UpdateCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventCaveDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateCategoryPage">

    <Grid>
        <Label Name="idLabel" Content="ID" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="24, 12, 24, 12"/>
        <Label Name="nameLabel" Content="Name (max 15 characters)" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="24, 12, 24, 12" Margin="0,40,0,0"/>
        <Label Name="descriptionLabel" Content="Description (max 50 characters)" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="24, 12, 24, 12" Margin="0,80,0,0"/>
        <Label Name="imageLinkLabel" Content="Image link" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="24, 12, 24, 12" Margin="0,120,0,0"/>
        <Label Name="id" Content="-" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0, 12, 24, 12" Margin="221,0,0,0"/>
        <TextBox Name="name" HorizontalAlignment="Left" Height="23" Margin="221,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" VerticalContentAlignment="Center"/>
        <TextBox Name="description" HorizontalAlignment="Left" Height="24" Margin="221,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" VerticalContentAlignment="Center"/>
        <TextBox Name="imageLink" HorizontalAlignment="Left" Height="24" Margin="221,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" VerticalContentAlignment="Center"/>
        <Button Name="updateBtn" Content="Update" Margin="24, 24, 24, 24" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Click="UpdateButton_Click"/>
    </Grid>
</Page>
