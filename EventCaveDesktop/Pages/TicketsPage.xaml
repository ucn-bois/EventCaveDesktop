<Page x:Class="EventCaveDesktop.Pages.TicketsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventCaveDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TicketsPage">

    <Grid>
        <Label Name="header" Content="Tickets" Padding="10, 10, 0, 0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="24" FontWeight="Bold"/>
        <ListView Name="ticketList" Margin="0, 60, 0, 0" Grid.Row="1" PreviewMouseLeftButtonUp="listView_Click"/>
        <Label Name="messageLabel" Margin="0, 60, 0, 0" Grid.Row="1" Visibility="Hidden"/>
    </Grid>
</Page>
